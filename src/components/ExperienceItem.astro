---
export interface Props {
    title: string;
    description: string;
    link?: string;
    date: string;
    page?:string;
    img: string;
    tags: any;
}
const { title, description, date, link, page, img , tags} = Astro.props;

---

<div
    class="absolute w-3 h-3 bg-gray-100 rounded-full mt-1.5 -start-1.5 border border-white "
>
</div>
<time
    class="mb-1 text-sm font-normal leading-none text-gray-200"
    >{date}</time
>
<h3 class="text-lg font-semibold text-blue-500/90 mt-2">{title}</h3>
<p class=" text-base font-normal text-gray-200 text-balance">
    {description}
</p>
<ul class="flex gap-x-2 sm:flex-row flex-col">
    {tags.map ((tag: { icon: any; name: string; })=>(
        <li>
            <span class="flex gap-x-2 rounded-full py-2 px-2 mb-2">
                <tag.icon class="size-6"/>
                {tag.name}
            </span>
        </li>
    ))}
</ul>
<img class="mb-4" src={img} alt={title}>
{
    link && (
        <a
            href={link}
            target="_blank"
            class="mx-2 inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-800 hover:text-blue-600 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600"
        >
            Codigo{" "}
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                />
            </svg>
        </a>
    )
}
{
    page && (
        <a
            href={page}
            target="_blank"
            class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-800 hover:text-blue-600 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600"
        >
            Pagina{" "}
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                />
            </svg>
        </a>
    )
}