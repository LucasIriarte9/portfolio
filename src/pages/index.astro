---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import GitHub from "../icons/GitHub.astro"
import LinkedIn from "../icons/LinkedIn.astro"
import SocialPills from "../icons/SocialPills.astro";
import MailIcon from "../icons/Mail.astro"
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro"
import Case from "../icons/case.astro";
import Code from "../icons/code.astro";
import Proyectos from "../components/Proyectos.astro";
---

<Layout title="Portfolio de Lucas Iriarte."
	description=" Desarrollador Y Programador Web Font-End. Contratame para desarrollar tu aplicacion web.  ">
	<main class="px-8">
		<SectionContainer class="py-44 pb-32">
			<h1
				class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-8"
			>
				Hola, Soy Lucas <div class="flex justify-center items-center">
					<a
						href="https://www.linkedin.com/in/lucas-iriarte-b409471b8/"
						target="_blank"
						><Badge>Disponible para trabajar</Badge>
					</a>
				</div>
			</h1>

			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span class="text-red-600/100">+1 a√±o</span> de experiencia. Desarrollador
				Front-End. <br /> De Mar del Plata, Argentina. Especializado en React.
			</h2>

			<nav class="flex gap-4 mt-6 flex-wrap">
						<SocialPills href="https://www.linkedin.com/in/lucas-iriarte-b409471b8/">
							<LinkedIn class="md:size-6 size-4"/>
    						LinkedIn
						</SocialPills>
						<SocialPills href="https://github.com/LucasIriarte9">
							<GitHub class="md:size-6 size-4"/>
    						GitHub
						</SocialPills>
						<SocialPills href="mailto:lucasiriartematias@gmail.com">
							<MailIcon class="md:size-6 size-4"/>
    						Lucasiriartematias@gmail.com
						</SocialPills>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia" >
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Case class="size-8"/>
				Experiencia</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos" >
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-8"/>
				Proyectos</h2>
			<Proyectos />
		</SectionContainer>
	</main>
</Layout>
